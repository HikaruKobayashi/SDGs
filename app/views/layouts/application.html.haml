%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title Myapp
    = csrf_meta_tags
    = csp_meta_tag
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload'
    %script{ :src => "https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js" }
    %script{ :src => "https://cdnjs.cloudflare.com/ajax/libs/particlesjs/2.2.2/particles.min.js" }
    %script{ :src => "https://www.gstatic.com/firebasejs/6.2.4/firebase-app.js" }
    %script{ :src => "https://www.gstatic.com/firebasejs/6.2.4/firebase-auth.js" }
    %script{ :src => "https://www.gstatic.com/firebasejs/6.2.4/firebase-database.js" }
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'
  %body
    = yield